<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="system" method="upgrade">
    <name>Google Analytics 4</name>
    <author>MENJ</author>
    <creationDate>September 2023</creationDate>
    <copyright>Copyright (C) 2023 MENJ</copyright>
    <license>GNU General Public License</license>
    <authorEmail>contact@menj.org</authorEmail>
    <authorUrl>https://menj.net</authorUrl>
    <version>1.0.0</version>
    <description>Install Google Analytics 4 tracking code on your Joomla website.</description>
    <files>
        <filename plugin="google_analytics_4">google_analytics_4.php</filename>
        <filename>index.html</filename>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.plg_system_google_analytics_4.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="measurement_id"
                    type="text"
                    default=""
                    label="Google Analytics 4 Measurement ID"
                    description="Enter your Google Analytics 4 Measurement ID. It should look like 'G-XXXXXXXXXX'."
                    size="40"
                />
            </fieldset>
        </fields>
    </config>
</extension>
